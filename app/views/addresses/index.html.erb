<div class="col-md-12">
  <div class="panel panel-info">
    <div class="panel-heading clearfix">
      <h4 class="panel-title pull-left" style="padding-top: 7.5px;">Listing addresses</h4>
      <div class="btn-group pull-right">
        <%= link_to "Export To Excel", "#", class: 'btn btn-sm btn-primary pull-right' %>
      </div>      
    </div>      

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Full name</th>
            <th>Full address</th>
            <th>Phone number</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.full_name %></td>
              <td><%= address.full_address %></td>
              <td><%= address.phone_number %></td>
              <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="panel-footer">
      <%= link_to 'New Address', new_address_path, class: 'btn btn-sm btn-primary' %>
    </div>

  </div>
</div>
