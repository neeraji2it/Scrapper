<div class="col-md-12">
  <div class="panel panel-info">
    <div class="panel-heading clearfix">
      <h4 class="panel-title pull-left" style="padding-top: 7.5px;">
        <strong><%= pluralize Address.count, "Record" %></strong>
      </h4>

      <div class="btn-group pull-right">
        <%= link_to "<i class='glyphicon glyphicon-save'></i> Export To Excel".html_safe, addresses_path(format: 'xls'), class: 'btn btn-sm btn-success pull-right' %>

        <%= link_to "<i class='glyphicon glyphicon-save'></i> Export To Csv".html_safe, addresses_path(format: 'csv'), class: 'btn btn-sm btn-info pull-right' %>
        
        <%= link_to "<i class='glyphicon glyphicon-trash'></i> Clear All Data".html_safe, destroy_all_addresses_path, method: :delete, data: { confirm: 'Are you sure to clear database?' }, class: 'btn btn-sm btn-danger pull-right' %>
        
        <%= link_to "<i class='glyphicon glyphicon-plus'></i> New Address".html_safe, new_address_path,  class: 'btn btn-sm btn-primary pull-right' %>
      </div>      
    </div>      

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Full name</th>
            <th>Full address</th>
            <th>Phone number</th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.full_name %></td>
              <td><%= address.full_address %></td>
              <td><%= address.phone_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="panel-footer">
      <%= paginate @addresses, theme: 'twitter-bootstrap-3' %>
    </div>

  </div>
</div>
